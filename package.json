{
  "name": "expressjs-typescript-boilplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:alvIndieDevelop/expressjs-typescript-boilplate.git",
  "author": "Alvaro Martin Caballero <alvindiedevelop@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "serve": "node build/index.js",
    "dev": "nodemon",
    "build": "tsc -p .",
    "tsc": "tsc",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules"
    ],
    "ext": "ts",
    "exec": "ts-node --transpileOnly src/index.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.2.5",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "serve": "^14.1.2",
    "winston": "^3.8.2"
  }
}
